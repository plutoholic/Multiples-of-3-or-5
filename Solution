
//JAVA
public class Solution {

  public int solution(int number) {
    int m=0;
    if (number<0)
      return 0;
    
    else if(number>0){
    for (int i=0; i<number; i++){
      if (i%3==0 && i%5==0){
        m+=i;
      }
      else if (i%3==0 || i%5==0){
       m+=i;
      }
    }
      }
    return m;
  }
}
